@model TrgovinaElektronika.Models.Izdelek
@{
    ViewData["Title"] = "Uredi izdelek";
}

<h2>Uredi izdelek</h2>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label>Naziv</label>
        <input type="text" name="Naziv" value="@Model.Naziv" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Opis</label>
        <input type="text" name="Opis" value="@Model.Opis" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Cena</label>
        <input type="number" step="0.01" name="Cena" value="@Model.Cena" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Zaloga</label>
        <input type="number" name="Zaloga" value="@Model.Zaloga" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Shrani spremembe</button>
</form>
