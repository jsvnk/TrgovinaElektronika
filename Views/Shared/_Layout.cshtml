<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - TrgovinaElektronika</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">TrgovinaElektronika</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">Domov</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Izdelek/Index">Izdelki</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Kosarica/Index">Košarica</a>
                    </li>
                    @if (Context.Session.GetString("Uporabnik") == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                        </li>
                    }
                </ul>
                

                <ul class="navbar-nav">
                    @if (Context.Session.GetString("Uporabnik") != null)
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white me-2">
                                Prijavljen kot: <strong>@Context.Session.GetString("Uporabnik")</strong>
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="/Uporabnik/Odjava">Odjava</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Kosarica/MojaNarocila">Moja naročila</a>
                        </li>

                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Uporabnik/Prijava">Prijava</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
